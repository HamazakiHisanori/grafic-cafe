<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'devise/registration' %>
  </head>

  <body>

    <%= render partial: "shared/header" %>

    <div class="menu-title">
      <h1>従業員専用</h1>
    </div>

    <div class="sign-title">
      <h2>Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="sign-form">

        <div class="form-error">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="contents">
          <div>
            <h3>name</h3>
          </div>
          <div class="input">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"名前" %>
          </div>
        </div>

        <div class="contents">
          <div>
            <h3>email</h3>
          </div>
          <div class="input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メール" %>
            </div>
        </div>

        <div class="contents">
          <div>
            <h3>password</h3>
          </div>
          <div class="input">
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
          </div>
        </div>

        <div class="contents">
          <div>
            <h3>確認用password</h3>
          </div>
          <div class="input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"確認用" %>
          </div>
        </div>

      </div>

      <div class="btn">
        <%= f.submit "Sign up", class:"form-btn"%>
      </div>


    <% end %>

    <%= render partial: "shared/footer" %>

  </body>

</html>

