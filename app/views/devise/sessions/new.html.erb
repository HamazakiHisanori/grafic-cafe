<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'devise/session' %>
  </head>

  <body>

    <%= render "components/homebar" %>

    <div class="log-in">

      <div class="background">

        <div class="contents">

          <div class="title">
            <h2>Log in</h2>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form"}) do |f| %>

              <%= flash[:notice] %>
              <%= flash[:alert] %>

            <div class="content">
              <p>メールアドレス</p>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", id:"user-mail" %>
              <span class="error" id="user-mail-error">メールアドレスを入力してください</span>
            </div>

            <div class="content">
              <p>パスワード</p>
              <%= f.password_field :password, autocomplete: "current-password", class:"input", id:"password" %>
              <span class="error" id="password-error">パスワードを入力してください</span>
            </div>

            <div class="content">
              <%= f.submit "Log in", class:"form-btn"%>
            </div>

          <% end %>

        </div>

      </div>

    </div>

    <%= render "components/footer_second" %>

  </body>

</html>
