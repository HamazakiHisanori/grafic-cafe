<div>edit</div>

<%= form_with model: @menu, url: menu_path, local: true do |f| %>

<%= render "/shared/error_messages", model: @menu %>


<div>
  <%= f.label :image, "画像" %><br />
  <%= f.file_field :image %>
</div>

<div>
  <%= f.label :name, "名前" %><br />
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description, "説明" %><br />
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label :price, "値段" %><br />
  <%= f.text_area :price %>
</div>

<div class="sell-btn-contents">
      <%= f.submit "変更する", class:"sell-btn" %>
      <%=link_to 'もどる', menu_path(@menu.id), class:"back-btn" %>
    </div>

<% end %>
