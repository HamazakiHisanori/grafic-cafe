<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'menus/new_edit' %>
  </head>

  <body>

    <%= render "components/homebar" %>

    <div class="new-edit-menu">

      <div class="background">

        <div class="contents">

          <div class="title">
            <h2>Edit Menu</h2>
          </div>

          <%= render "components/error_messages", model: @menu %>

          <%= form_with model: @menu, url: menu_path(@menu.id), class:"form", local: true do |f| %>

            <div class="type-title">
              <p>メニューの種類を選択</p>
              <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"select"}) %>
            </div>

            <div class="content">

              <div class="image">

                <div class="image-select">
                  <p>画像選択</p>
                  <%= f.file_field :image %>
                </div>

                <div class="preview">
                </div>

              </div>

              <div class="text">

                <div class="name-price">

                  <div class="each">
                    <p>名前</p>
                    <%= f.text_field :name, class:"each-input" %>
                  </div>

                  <div class="each">
                    <p>値段</p>
                    <p>¥<%= f.text_field :price, class:"each-input"  %></p>
                  </div>

                </div>

                <div class="description">
                  <p>説明</p>
                  <%= f.text_area :description, class:"description-input"%>
                </div>

                <div class="form-btn">
                  <%= f.submit "編集する", class:"btn" %>
                  <%= link_to menus_path, class:"btn" do %>
                    <p>戻る</p>
                  <% end %>
                </div>

              </div>

            </div>

          <% end %>

        </div>

      </div>

    </div>

    <%= render "components/footer_second" %>

  </body>

</html>
