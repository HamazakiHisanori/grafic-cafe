<%= form_with model: @menu, url: menus_path, local: true do |f| %>

 <%= render "/shared/error_messages", model: @menu %>

<div>
  <%= f.label :image, "画像" %><br />
  <%= f.file_field :image %>
</div>

<div>
  <%= f.label :name, "名前" %><br />
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description, "説明" %><br />
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label :price, "値段" %><br />
  <%= f.text_area :price %>
</div>

<div class="sell-btn-contents">
      <%= f.submit "出品する", class:"sell-btn" %>
