<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:700" rel="stylesheet">
    <%= stylesheet_link_tag 'contacts/index' %>
  </head>

  <body>

    <%= render partial: "shared/header" %>

    <div class="box">

      <div class="circle a"></div>
      <div class="circle b"></div>
      <div class="circle c"></div>

      <div class="circle d"></div>
      <div class="circle e"></div>
      <div class="circle f"></div>

      <div class="circle g"></div>
      <div class="circle h"></div>
      <div class="circle i"></div>

      <div class="circle j"></div>
      <div class="circle k"></div>
      <div class="circle l"></div>

      <div class="circle m"></div>
      <div class="circle n"></div>
      <div class="circle o"></div>

      <div class="circle p"></div>
      <div class="circle q"></div>
      <div class="circle r"></div>

    </div>

    <div class="menu-title">
      <h1>contact</h1>
    </div>

    <div class="contact-box">

      <div class="email-box">
        <input type="text" placeholder="email" value="" />
      </div>

      <div class="phone-number-box">
        <input type="text" placeholder="phone-number" value="" />
      </div>

      <div class="select-box">
        <select name="category">
          <option>test</option>
          <option>sample</option>
          <option>hoge</option>
        </select>
      </div>

      <div class="text-box">
        <textarea placeholder="要件を入力してください" value=""></textarea>
      </div>

      <div class="select-box">
        <select name="reply">
          <option>test</option>
          <option>sample</option>
          <option>hoge</option>
        </select>
      </div>

      <input id="button" class="btn" type="button" name="submit" value="submit" />


    </div>

    <div class="secret">
      <% if user_signed_in? %>
      <div class="secret-btn">
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"text" %>
      </div>
      <% end %>
      <div class="secret-btn">
        <%= link_to "従業員専用", new_user_registration_path, class:"text" %>
      </div>
    </div>

    <%= render partial: "shared/footer" %>

  </body>

</html>
