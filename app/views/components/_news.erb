<%= stylesheet_link_tag 'components/news' %>
<%= stylesheet_link_tag 'colorbox/colorbox' %>

<div class="contents scroll-anime" id="news">

  <div class="title-bar news-title">
    <h2>NEWS</h2>
  </div>

  <div class="news-contents">

    <% if @news.present? %>

      <div class="news-box">

        <% @news.each do |news| %>

          <div class="news-item">

            <div class="news-item-text">

              <div class="news-item-date">
                <p><%= "#{news.created_at.year}.#{news.created_at.month}.#{news.created_at.day}" %></p>
              </div>

              <div class="news-item-title">
                【<p><%= link_to news.title, news_path(news.id), class:"iframe" %></p>】
              </div>

            </div>

          </div>

        <% end %>

       </div>

    <% else %>

      <div class="else-sentence">
        <p>現在お知らせはございません</p>
      </div>

    <% end %>

  </div>

</div>
