<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css2?family=Yomogi&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'homes/index' %>
  </head>

  <body>

    <div class="menu-bar">
      <ul>
        <li><%= link_to "TOP", root_path %></li>
        <li><%= link_to "NEWS", menus_path %></li>
        <li><%= link_to "MENU", menus_path %></li>
        <li><%= link_to "CONTACT", contacts_path %></li>
        <li><%= link_to "ACCESS", access_homes_path %></li>
      </ul>
    </div>

    <div class="top-background">

      <div class="background-change"></div>
      <div class="background-change"></div>
      <div class="background-change"></div>

    </div>

    <div class="top-title-background">
      <div class="title-background">
          <h1>参ぷる</h1>
      </div>
    </div>

    <div class="arrow-background">
      <div class="arrow-block-background">

        <div class="arrow-block">
          <ul>
            <li><div class="arrow-a"></div></li>
            <li><div class="arrow-b"></div></li>
            <li><div class="arrow-c"></div></li>
          </ul>
        </div>

        <div class="arrow-block">
          <ul>
            <li><div class="arrow-a"></div></li>
            <li><div class="arrow-b"></div></li>
            <li><div class="arrow-c"></div></li>
          </ul>
        </div>

        <div class="arrow-block">
          <ul>
            <li><div class="arrow-a"></div></li>
            <li><div class="arrow-b"></div></li>
            <li><div class="arrow-c"></div></li>
          </ul>
        </div>

      </div>
    </div>

    <div class="news-background">

      <div class="title-bar">
        <h2>NEWS</h2>
      </div>

      <div class="news-contents-background">

        <div class="news-contents">

          <div class="content">

           <% @news.each do |news| %>

              <div class="content-image">
                <div class="image"><%= image_tag news.image,  class:"image-tag"%></div>
              </div>

              <div class="content-text">
                <div class="data"><p><%= "#{news.created_at.year}.#{news.created_at.month}.#{news.created_at.day}" %></p></div>
                <div class="title"><p><%= news.title %></p></div>
                <div class="text"><p><%= news.contents %></p></div>
              </div>

            <% end %>

          </div>

          <div class="content"></div>

          <div class="content"></div>

        </div>

      </div>

    </div>

  </body>

</html>
