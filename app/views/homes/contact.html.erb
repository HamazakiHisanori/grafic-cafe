<!DOCTYPE html>
<html>

  <head>
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:700" rel="stylesheet">
    <% content_for :css do %>
      <%= stylesheet_link_tag 'homes/contact' %>
    <% end %>
  </head>

  <body>

    <div class="box">

      <div class="circle a"></div>
      <div class="circle b"></div>
      <div class="circle c"></div>

      <div class="circle d"></div>
      <div class="circle e"></div>
      <div class="circle f"></div>

      <div class="circle g"></div>
      <div class="circle h"></div>
      <div class="circle i"></div>

      <div class="circle j"></div>
      <div class="circle k"></div>
      <div class="circle l"></div>

      <div class="circle m"></div>
      <div class="circle n"></div>
      <div class="circle o"></div>

      <div class="circle p"></div>
      <div class="circle q"></div>
      <div class="circle r"></div>

    </div>

    <div class="home-title">

      <div class="home-title-name">
        <%= link_to "GRAPHIC CAFE", root_path, class:"root-link"%>
      </div>

      <div class="home-title-date">
        <div>
          000-0000-0000
          <br>
          00city to 00-00
        </div>
      </div>

    </div>

    <div class="menu-bar">
      <ul >
        <li><%= link_to "home", root_path %></li>
        <li><%= link_to "news", news_homes_path %></li>
        <li><a>menu</a></li>
        <li><%= link_to "contact", contact_homes_path %></li>
        <li><%= link_to "access", access_homes_path %></li>
      </ul>
    </div>

    <div class="menu-title">
      <h1>contact</h1>
    </div>

    <div class="contact-box">

      <div class="email-box">
        <input type="text" placeholder="email" value="" />
      </div>

      <div class="phone-number-box">
        <input type="text" placeholder="phone-number" value="" />
      </div>

      <div class="category-box">
        <select name="category">
          <option>test</option>
          <option>sample</option>
          <option>hoge</option>
        </select>
      </div>

      <div class="text-box">
        <textarea placeholder="要件を入力してください" value=""></textarea>
      </div>

      <input id="button" class="btn" type="button" name="submit" value="submit" />

    </div>

    <div class="secret">
      <input id="button" type="button" name="submit" value="従業員専用" />
    </div>

    <footer>

      <div class="footer-contents">
        <div><%= image_tag 'map.jpg', class:"image" %></div>
        <div>details</div>
      </div>

      <div class="footer-bar">
        <ul>
          <li><%= link_to "home", root_path %></li>
          <li><%= link_to "news", news_homes_path %></li>
          <li><a>menu</a></li>
          <li><%= link_to "contact", contact_homes_path %></li>
          <li><%= link_to "access", access_homes_path %></li>
        </ul>
      </div>

    </footer>

  </body>

</html>
